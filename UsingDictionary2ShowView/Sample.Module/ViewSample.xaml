<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ixv="clr-namespace:Sample.Module">
       
    <Style TargetType="ixv:ViewSample">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ixv:ViewSample">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <RichTextBox Margin="5" IsReadOnly="True">
                            <FlowDocument>
                                <Paragraph FontSize="15">Hello!</Paragraph>
                                <Paragraph FontStyle="Italic" TextAlignment="Left" FontSize="14" Foreground="Gray">This textbox is showed by Dictionary file (ViewSample.xaml) </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>